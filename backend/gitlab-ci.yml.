stages:
  - test
  - build
  - deploy

variables:
  DOCKER_REGISTRY: registry.gitlab.com
  IMAGE_NAME: registry.gitlab.com/yasmina504/tier-app/backend
  DOCKER_TAG: $CI_COMMIT_SHORT_SHA

# 1️⃣ Test Stage
test:
  stage: test
  image: python:3.11
  before_script:
    - pip install -r requirements.txt
    - pip install pytest
  script:
    - pytest tests/

# 2️⃣ Build Docker Image
build:
  stage: build
  image: docker:24.0.5
  services:
    - docker:24.0.5-dind
  variables:
    DOCKER_TLS_CERTDIR: "/certs"
  script:
    - docker login -u "$CI_REGISTRY_USER" -p "$CI_REGISTRY_PASSWORD" $DOCKER_REGISTRY
    - docker build -t $IMAGE_NAME:$DOCKER_TAG .
    - docker push $IMAGE_NAME:$DOCKER_TAG

# 3️⃣ Deploy Stage
deploy:
  stage: deploy
  image: appleboy/drone-ssh:1.0
  script:
    - ssh -o StrictHostKeyChecking=no yasmina@172.16.60.128 'bash -s' < deploy.sh
  only:
    - main
